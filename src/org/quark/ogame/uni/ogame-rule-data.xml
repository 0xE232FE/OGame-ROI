<?xml version="1.0" encoding="UTF-8"?>

<ogame-rule-data>
		<!-- Buildings -->
		<metal-mine metal="60" crystal="15" exponent="1.5">
			<production resource="metal">
				<value>30</value>
				<add using="level" multiplier="30" exponent="1.1" />
				<multiply variable="plasma" exponent="1.01" />
			</production>
			<production resource="energy">
				<using variable="level" multiplier="-1.5" exponent="1.1" />
			</production>
		</metal-mine>
		<crystal-mine metal="48" crystal="24" exponent="1.6">
			<production resource="crystal">
				<value>15</value>
				<using variable="level" multiplier="20" exponent="1.1" />
				<using variable="plasma" exponent="1.0066" />
			</production>
			<production resource="energy">
				<using variable="level" multiplier="-1.5" exponent="1.1" />
			</production>
		</crystal-mine>
		<deuterium-synthesizer metal="225" crystal="75" exponent="1.5">
			<production resource="deuterium">
				<using variable="level" multiplier="10" exponent="1.1" />
				<using variable="plasma" exponent="1.0033" />
				<using variable="mean-temperature" 
			</production>
			<production resource="energy">
				<using variable="level" multiplier="-1.5" exponent="1.1" />
			</production>
			<production resource="deuterium" base="0" production-factor="10" production-exponent="1.1" plasma-bonus=".33"
				temp-adjust-offset="1.36" temp-adjust-multiplier=".004" />
			<energy multiplier="-1.5" exponent="1.1" />
		</deuterium-synthesizer>
		<solar-plant metal="75" crystal="30" exponent="1.5">
			<energy multiplier="20" exponent="1.1" />
		</solar-plant>
		<fusion-reactor metal="900" crystal="360" deuterium="180" exponent="1.8">
			<production resource="deuterium" production-factor="-10" production-exponent="1.1" />
			<energy multiplier="30" exponent="1.05" tech-exponent=".01" />
		</fusion-reactor>
		<metal-storage metal="1000" exponent="2">
			<storage resource="metal" />
		</metal-storage>
		<crystal-storage metal="1000" crystal="500" exponent="2">
			<storage resource="crystal" />
		</crystal-storage>
		<deuterium-storage metal="1000" crystal="1000" exponent="2" />
		<robotics-factory metal="400" crystal="120" deuterium="200" exponent="2" />
		<shipyard metal="400" crystal="200" deuterium="100" exponent="2" />
		<research-lab metal="200" crystal="400" deuterium="200" exponent="2" />
		<alliance-depot metal="20000" crystal="40000" exponent="2" />
		<missile-silo metal="20000" crystal="20000" deuterium="1000" exponent="2" />
		<nanite-factory metal="1000000" crystal="500000" deuterium="100000" exponent="2" />
		<terraformer crystal="50000" deuterium="100000" energy="1000" exponent="2" />
		<space-dock metal="200" deuterium="50" energy="50" exponent="5" energy-exponent="2.5" />
		<lunar-base metal="20000" crystal="40000" deuterium="20000" exponent="2" />
		<sensor-phalanx metal="20000" crystal="40000" deuterium="20000" exponent="2" />
		<jump-gate metal="2000000" crystal="4000000" deuterium="2000000" exponent="2" />

		<!-- Research -->
		<energy crystal="800" deuterium="400" exponent="2" />
		<laser metal="200" crystal="100" exponent="2" />
		<ion metal="1000" crystal="300" deuterium="100" exponent="2" />
		<hyperspace crystal="4000" deuterium="2000" exponent="2" />
		<plasma metal="2000" crystal="4000" deuterium="1000" exponent="2" />
		<combustion-drive metal="400" deuterium="600" exponent="2" />
		<impulse-drive metal="2000" crystal="4000" deuterium="600" exponent="2" />
		<hyperspace-drive metal="10000" crystal="20000" deuterium="6000" exponent="2" />
		<espionage metal="200" crystal="1000" deuterium="200" exponent="2" />
		<computer crystal="400" deuterium="600" exponent="2" />
		<astrophysics metal="4000" crystal="8000" deuterium="4000" exponent="1.75" />
		<intergalactic-research-network metal="240000" crystal="400000" deuterium="160000" exponent="2" />
		<graviton energy="300000" exponent="3" />
		<weapons metal="800" crystal="200" exponent="2"/>
		<shielding metal="200" crystal="600" exponent="2" />
		<armor metal="1000" exponent="2" />

		<!-- Ships -->
		<solar-satellite crystal="1000" deuterium="500" />
		<crawler metal="2000" crystal="2000" deuterium="1000" />
		<light-fighter metal="3000" crystal="1000" />
		<heavy-fighter metal="6000" crystal="4000" />
		<cruiser metal="20000" crystal="7000" deuterium="2000" />
		<battleship metal="45000" crystal="15000" />
		<battle-cruiser metal="30000" crystal="40000" deuterium="15000" />
		<bomber metal="50000" crystal="25000" deuterium="15000" />
		<destroyer metal="60000" crystal="50000" deuterium="15000" />
		<death-star metal="5000000" crystal="4000000" deuterium="1000000" />
		<reaper metal="85000" crystal="55000" deuterium="20000" />
		<pathfinder metal="8000" crystal="15000" deuterium="8000" />	

		<small-cargo metal="2000" crystal="2000" />
		<large-cargo metal="6000" crystal="6000" />
		<solar-satellite crystal="2000" deuterium="500"
			energy-temp-offset="160" energy-temp-multiplier="0.166666666666666667" />
		<crawler metal="2000" crystal="2000" deuterium="1000"
			resource="all" production-factor=".0002" miner-bonus="1.5" energy-multiplier="-50" cap-per-total-mines="8" />

		<!-- Defenses -->
		
	<variables>
		<variable name="total-mines">
			<sum>
				<ref name="metal-mine" />
				<ref name="crystal-mine" />
				<ref name="deuterium-synthesizer" />
			</sum>
		</variable>
		<variable name="usable-crawlers">
			<min>
				<ref name="crawlers" />
				<multiply>
					<ref name="total-mines" />
					<value>8</value>
				</multiply>
			</min>
		</variable>
		<variable name="crawler-bonus">
			<product>
				<ref name="usable-crawlers" />
				<product>
					<value>0.0002</value>
					<if ref="class" value="miner">
						<value>1.5</value>
					</if>
				</product>
			</product>
		</variable>
	</variables>
	<production>
		<metal>
			<product>
				<sum>
					<value>30</value>
					<product>
						<ref name="metal-mine" />
						<exp>
							<value>1.1</value>
							<ref name="metal-mine" />
						</exp>
					</product>
				</sum>
				<sum>
					<value>1</value>
					<ref name="crawler-bonus" />
				</sum>
				<sum>
					<value>1</value>
					<product>
						<ref name="plasma" />
						<value>0.01</value>
					</product>
				</sum>
			</product>
		</metal>
		<metal resource="metal" base="30" production-factor="30" production-exponent="1.1" plasma-bonus="1"
			energy-multiplier="-1.5" energy-exponent="1.1" />
		<crystal resource="crystal" base="15" production-factor="20" production-exponent="1.1" plasma-bonus=".66"
			energy-multiplier="-1.6" energy-exponent="1.1" />
		<deuterium resource="deuterium" base="0" production-factor="10" production-exponent="1.1" plasma-bonus=".33"
			temp-adjust-offset="1.36" temp-adjust-multiplier=".004"
			energy-multiplier="-1.5" energy-exponent="1.1" />
		<solar production-factor="20" energy-exponent="1.1" />
		<fusion resource="deuterium" production-factor="-10" production-exponent="1.1"
			energy-multiplier="30" energy-exponent="1.05" energy-tech-exponent=".01" />
	</production>
</ogame-rule-data>
